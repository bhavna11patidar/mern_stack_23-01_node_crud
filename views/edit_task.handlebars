<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 p-5 card">
            <h2 class="text-primary text-center">Edit Task</h2>
            {{#each errors}}
            <div class="alert alert-danger">{{msg}}</div>
            {{/each}}
            <form method="post" action="/update-task">
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" placeholder="title" class="form-control" name="title" value="{{title}}"/>
                </div>
                 <div class="form-group">
                    <label>Description</label>
                    <textarea placeholder="Description" class="form-control" rows="5" name="description">{{description}}</textarea>
                </div>
                <div class="text-center">
                    <input type="hidden" name="_id" value="{{_id}}"/>
                    <button class="btn btn-primary">Update</button> 
                </div>
            </form>
        </div>
    </div>
</div>